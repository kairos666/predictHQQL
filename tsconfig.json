{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2015",
            "esnext"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "strict": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}